{
  "compilerOptions": {
    "lib": ["deno.ns", "deno.window", "dom", "typescript"],
    "types": ["https://deno.land/x/hono/mod.ts", "https://esm.sh/@supabase/supabase-js"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "hono": "npm:hono@4.3.11",
    "hono/middleware": "https://deno.land/x/hono/middleware.ts",
    "react": "npm:react@^18.3.1",
    "react/jsx-runtime": "npm:react@^18.3.1",
    "react-dom": "npm:react-dom@^18.3.1",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js",
    "resend": "npm:resend@6.5.2"
  },
  "exclude": [
    "vite.config.ts",
    "node_modules"
  ],
  "nodeModulesDir": "auto",
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
